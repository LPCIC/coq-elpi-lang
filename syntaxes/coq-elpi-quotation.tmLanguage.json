{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "coq-elpi-quotation",
	"patterns": [
		{
			"include": "#lp-quotation"
		},
		{
			"include": "#lp-var-quotation"
		},
		{
			"include": "#lp-app-var-quotation"
		},
		{
			"include": "#coq-quotation"
		},
		{
			"include": "#lib-quotation"
		},
		{
			"include": "#hoas"
		},
		{
			"include": "#gref"
		}
	],
	"repository": {
		"hoas": {
			"name": "keyword.control.coq",
			"match": "(?<![-\\.])\\b(sort|global|fun|prod|let|app|match|fix|hole|cofix|proj)\\b"
		},
		"gref": {
			"name": "string.other",
			"match": "(?<![-\\.])\\b(indt|indc|const)\\b"
		},
		"lib-quotation": {
			"match": "lib:@?[a-zA-Z0-9_]+(\\.[a-zA-Z0-9_]+)*",
			"name": "string.other"
		},
		"lp-quotation": {
			"begin": "\\blp:\\{\\{",
			"end": "\\}\\}",
			"name": "source.elpi",
			"patterns": [
				{
					"include": "source.elpi"
				}
			]
		},
		"coq-quotation": {
			"begin": "(?<!lp:)\\{\\{",
			"end": "\\}\\}",
			"name": "source.coq",
			"patterns": [
				{
					"include": "source.coq"
				}
			]
		},
		"lp-var-quotation": {
			"begin": "\\blp:([A-Z_][a-zA-Z0-9_]*)\\b",
			"end": "",
			"beginCaptures": {
				"1": {
					"name": "variable.language.elpi"
				}
			}
		},
		"lp-app-var-quotation": {
			"begin": "\\blp:\\(([A-Z_][a-zA-Z0-9_]*)[ a-x0-9]+\\)",
			"end": "",
			"beginCaptures": {
				"1": {
					"name": "variable.language.elpi"
				}
			}
		}
	},
	"scopeName": "coq-elpi-quotation.injection",
	"injectionSelector": "L:source.elpi -comment, L:source.coq -comment"
}